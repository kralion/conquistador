---
import MainLayout from "../layouts/main-layout.astro";
import QuoteText from "../components/quote.tsx";
import Facebook from "../icons/facebook.tsx";
import Twitter from "../icons/twitter.tsx";
import LinkedIn from "../icons/linkedin.tsx";
import Instagram from "../icons/instagram.tsx";

const servicios = [
  {
    nombre: "Cama King Size",
    descripcion: "Amplia y lujosa, ideal para un descanso reparador.",
  },
  {
    nombre: "Bañera de Hidromasaje",
    descripcion: "Para disfrutar de momentos de relajación y bienestar.",
  },
  {
    nombre: "Minibar Personalizado",
    descripcion: "Selección de bebidas y snacks a tu disposición.",
  },
  {
    nombre: "Terraza Privada",
    descripcion:
      "Espacio al aire libre para disfrutar de vistas y tranquilidad.",
  },
  {
    nombre: "Iluminación Ambiental",
    descripcion:
      "Regulable para crear el ambiente perfecto en cualquier momento.",
  },
  {
    nombre: "Ropa de Cama Premium",
    descripcion: "Suaves y cómodas, para un descanso inigualable.",
  },
  {
    nombre: "Televisión de Pantalla Plana",
    descripcion:
      "Con acceso a canales internacionales para tu entretenimiento.",
  },
  {
    nombre: "Servicio de Concierge",
    descripcion:
      "Asistencia personalizada para hacer tu estancia aún más especial.",
  },
];
---

<MainLayout title="Interior Design About Us">
  <!-- Banner Section -->

  <section
    class="w-full bg-matrimonial h-[50vh] flex justify-center items-end bg-no-repeat bg-cover bg-center"
  >
    <div
      class="py-[30px] lg:py-[41px] px-[60px] lg:px-[152px] flex flex-col justify-center items-center bg-white rounded-tl-[37px] rounded-tr-[37px] gap-2.5"
    >
      <h1
        class="text-[30px] leading-[40px] lg:text-[50px] lg:leading-[62px] font-dm capitalize text-primary-200"
      >
        Suite Matrimonial
      </h1>
    </div>
  </section>

  <!-- Quote Section -->

  <section
    class="w-full px-12 lg:px-0 pt-[100px] lg:pt-[200px] lg:max-w-[1200px] mx-auto flex items-center justify-center"
  >
    <QuoteText
      text="Disfruta de la privacidad y el confort en nuestra habitación matrimonial, diseñada especialmente para parejas. "
      name=""
    />
  </section>

  <!-- What We Do Section -->

  <section
    class="w-full pt-[100px] lg:pt-[150px] px-12 lg:px-0 mx-auto lg:max-w-[1200px]"
  >
    <div
      class="w-full flex flex-col-reverse lg:flex-row justify-between gap-10 items-center"
    >
      <div class="flex flex-col gap-6">
        <h2
          class="text-[30px] text-center lg:text-left font-dm tracking-wide capitalize leading-8 md:leading-[62.50px] md:text-[50px] text-text-blue"
        >
          Amenities
        </h2>
        <ul class="pl-5 space-y-5">
          {
            servicios.map((detail, index) => (
              <li class=" italic  text-lg ">
                <img
                  src="https://www.svgrepo.com/show/528887/check-circle.svg"
                  alt="check"
                  class="w-5 h-5 inline-block mr-2"
                />
                {detail.nombre}
              </li>
            ))
          }
        </ul>
      </div>
      <img
        src="https://i.ibb.co/84j0rV8/Gemini-Generated-Image-kg2q5fkg2q5fkg2q.jpg"
        class="w-[600px] rounded-3xl"
        alt=""
      />
    </div>
    <div class="lg:flex gap-5 hidden m-5 mt-36">
      <img
        src="https://i.ibb.co/vYRCqD0/Whats-App-Image-2024-10-07-at-3-32-49-PM-8.jpg"
        class="w-[600px] rounded-3xl"
        alt=""
      />
      <img
        src="https://i.ibb.co/0nPq6J3/Whats-App-Image-2024-10-07-at-3-32-49-PM-1.jpg"
        class="w-[600px] rounded-3xl"
        alt=""
      />
    </div>
  </section>
</MainLayout>

<style>
  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
</style>
